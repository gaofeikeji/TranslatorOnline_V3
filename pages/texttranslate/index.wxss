/* pages/texttranslate/index.wxss */ 
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}             
.textarea-container{  
  background: rgba(0, 0, 0, 0.03);
  background: rgba(214, 105, 105,0.3);
  margin-top: 30px;
  padding: 40rpx;
  height: 80%;
  width: 80%;
  border-radius: 4px;  
}


.action-btn-box .action-btn{ 
  width: 100%; 
  height: 90rpx;
  line-height: 90rpx;
  margin: 10rpx; 
}


.scroll-translate{
  height: 90%;
  width: 90%;
  margin-top: 30px;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.05);
  opacity: 1;
  border-radius: 8px;
}

.lang-left-right{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.lang-left,.lang-right{
  display: inline-block;
  padding: 4px 8px;
  width: 49%;
  font-size: 26rpx;
}
.lang-right{
  border-left: 1px solid rgba(0, 0, 0, 0.2);
}
.translate-text{
  font-weight: 600;
}
.translate-margin{
  margin: 40rpx 0;

}