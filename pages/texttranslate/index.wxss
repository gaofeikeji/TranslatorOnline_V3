/* pages/texttranslate/index.wxss */ 

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
   background: #ccc;
   padding-top: 58rpx ;

}           
.text-container{
  height: 100%;
  width: 100%;
  background: #fff;
  margin: 0 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}  
.textarea-container{  
  background: rgba(0, 0, 0, 0.03);
  margin-top: 30px;
  padding: 40rpx;
  height: 80%;
  width: 80%;
  border-radius: 4px;  
  font-size: 14px;
  color: #000;
  line-height: 20px;
}


.action-btn-box .action-btn{ 
  width: 100%; 
  height: 90rpx;
  line-height: 90rpx;
  margin: 18rpx; 
  width: 345px;
  height: 45px;
  line-height: 45px;
  opacity: 1;
  border-radius: 2px;
}

.scroll-translate{
  height: 90%;
  width: 90%;
  margin-top: 30px;
  opacity: 1;
  border-radius: 8px;
  background: rgba(0, 0, 0, 0.03);
}

.lang-left-right{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.lang-left,.lang-right{
  display: inline-block;
  padding: 20px 8px;
  width: 49%;
  font-size: 26rpx;
    
  font-size: 14px;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 20px;
  color: rgba(0, 0, 0, 1);
}
.lang-right{
  border-left: 1px solid rgba(0, 0, 0, 0.2);
}
.lang-item{
  padding:20rpx 10rpx 0 10rpx;
}