/* pages/texttranslate/index.wxss */ 
.container{
  display: block;
   height: 100%;
}           
.text-container{
  height: 100%;
  width: 100%;
  background: #fff;
  display: block;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}  
.textarea-container{  
  display: inline-block;
  background: rgba(0, 0, 0, 0.03); 
  overflow-y: auto;
  padding: 20rpx;
  margin: 8rpx;
  height: 60%;
  min-height: 580rpx;
  width: 90%;
  margin: 40rpx 20rpx;
  border-radius: 4px;  
  font-size: 14px;
  color: #000;
  line-height: 20px;
}


.action-btn-box .action-btn{  
  height: 90rpx;
  line-height: 90rpx;
  margin: 18rpx; 
  width: 96%; 
  min-width: 690rpx; 
  opacity: 1;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 1);
  
  /* border: 2rpx solid rgba(0, 0, 0, 0.15); */
  
  box-shadow: 2rpx 2rpx 4rpx  rgba(0, 0, 0, 0.05);
}

.scroll-translate-left-right{
  height: 80%;
  width: 90%;
  max-height: 500px;
  margin: 0 auto;
  opacity: 1;
  border-radius: 8px;
  background: rgba(0, 0, 0, 0.03); 
}

.lang-left-right{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.lang-left,.lang-right{
  display: inline-block;
  background: rgba(0, 0, 0, 0.03);
  padding: 20px 8px;
  width: 49%;
  font-size: 26rpx;
    
  font-size: 14px;
  font-weight: normal;
  letter-spacing: 0px;
  line-height: 20px;
  color: rgba(0, 0, 0, 1);
}
.lang-right{
  border-left: 1px solid rgba(0, 0, 0, 0.2);
  height: 100%;
}
.lang-item .horizon-text   {
  border-color: none;
} 


.tab-bottom { 
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 900;  
}
 
.lang-item-block { 
 display: block;
}
.lang-item .horizon-text {
  border-color: transparent;
  display: block;
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.7);
  text-align: left;
}
.lang-item .horizon-text { 
  color: rgba(0, 0, 0,1); 
}
  