.container{
    background-color: rgba(204,204,204,1);
    height: 90%;
}

.text-container{
    height: 80%;
    min-height: 460px;
}

.textarea-container { 
    display: block;
    height: 100%;
    background: #fff;
    padding-top: 20px;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}
.upload-img { 
    position: relative;
    display: inline-block;
    /* flex-direction: row;
  justify-content: center;
  align-items: center;  */
    width: 158rpx;
    height: 158rpx;
    opacity: 1;
    border-radius: 8rpx;
    background: rgba(0, 0, 0, 0.05);
    margin:20rpx 10rpx;
    vertical-align: top;
}
.textarea-container:after{
    content: "";
    display: table;
    clear: both;
}

.upload-item-img {
    display: inline-block;
    width: 158rpx;
    height: 158rpx;
    border:3px solid  rgba(0, 0, 0, 0.05);
    position: absolute;
    top: 0;
    right: 0;
    z-index: 12;

} 
.upload-item-img.border-check{
    border-color: rgba(31, 113, 255, 0.6);

}

.upload-item-img  .upload-item-remove{
    position: absolute;
    top: 0;
    right: 0;
    z-index: 15;
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    z-index: 15;
    border:2px solid  transparent;

} 
.icon-btns{
    width: 30rpx;
    height: 30rpx;
    background-repeat: no-repeat;
    background-color: transparent;
    display: inline-block;

}
.icon-btns.image-remove{
    position: absolute;
    top: 0;
    right: 0;
    z-index: 115;
    transform: scale(1.3);
    background-image: url("data:image/png;base64,");
  } 
  .icon-btns.image-add{
      width: 60rpx;
      height: 60px;
      margin: 0 auto;
      transform: scale(1.5) translateX(20px) translateY(20px); 
      background-image: url("data:image/png;base64,");
    } 
  

 
.tab-bottom.transparent{
    background-color: transparent;
    border-top-color: transparent; 
    display: flex;
    text-align: center;
    padding: 60rpx;
    justify-content: center;
    align-items: center;
  } 
  
  .circle-btn.picture-action{
    display: inline-block;
    width: 260rpx !important;
    border-radius: 180rpx;
    height:90rpx !important;
    line-height: 90rpx !important;
    text-align: center;
    padding:0 !important;   
    margin: 0 auto;
