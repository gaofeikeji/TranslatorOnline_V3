<!--index.wxml-->  <page-meta>
<navigation-bar
canBack="{{false}}"
currentLang="{{currentLang}}"
currentTargetLang="{{currentTargetLang}}" 
    color-animation-duration="2000"
    color-animation-timing-func="easeIn"
    class="topnav"
     style="position: absolute;z-index: 111111;width: 100%;height: {{statusBarHeight+navBarHeight}}px;display:block;"
  />  </page-meta>
    
    <camera  device-position="back" style="top:{{statusBarHeight+navBarHeight}}px;width:100%;height:{{screenHeight-(statusBarHeight+navBarHeight)}}px"   flash="on"  mode="normal" binderror="cam_error"  bindinitdone="initCamera"
  class="start-image"></camera>  
      <view class="container {{initCamral?'hidden':''}}"> 
         <view class="cloum-box" hover-class="none" hover-stop-propagation="false">
            <view class="row-box" hover-class="none" hover-stop-propagation="false">
              <view class="cloum-box-item"></view>
              <view class="cloum-box-item"></view>
              <view class="cloum-box-item"></view>
            </view>
            <view class="row-box" hover-class="none" hover-stop-propagation="false">
              <view class="cloum-box-item"></view>
              <view class="cloum-box-item"></view>
              <view class="cloum-box-item"></view>
            </view>
            <view class="row-box" hover-class="none" hover-stop-propagation="false">
              <view class="cloum-box-item"></view>
              <view class="cloum-box-item"></view>
              <view class="cloum-box-item"></view>
            </view>
         </view>
         <text class="system-load-info">相机加载中</text>
        <view class="sys-info-box">
         </view> 
      </view> 
    <custom-ads ad_type="7" style="height: 100%;">
      <!-- 底部banner广告 -->
      <view class="adcontainer">
           <custom-ads ad_type="3" ad_pos="bottom"></custom-ads> 
       </view>
    </custom-ads>

    <block wx:if="{{ initCamral }}">   
      <button size="mini" class="circle-btn picture-action" bindtap="takePhoto">拍摄翻译</button>
   </block>
 
    <!-- 底部导航 -->
    <view class="tab-bar tabbar tab-bottom safe-area">
      <view 
          class="tabbar-item {{ select === index ? 'tabbar-select' : '' }}"
          wx:for="{{ list }}"  
          wx:key="index"
          data-page="{{ item.pagePath }}"  
          data-index="{{ index }}"
          data-type="{{ item.type }}"
          data-notpage="{{ item.notpage }}"
          bindtap="selectPage"
      >
          <block wx:if="{{ item.type === 0 }}">
              <image src="{{ select === index ?  item.selectedIconPath : item.iconPath }}"></image>
              <text>{{ item.text }}</text>
          </block>
          <block wx:elif="{{ item.type === -1 }}">
            <image src="{{ select === index ?  item.selectedIconPath : item.iconPath }}"></image>
            <text>{{ item.text }}</text>
        </block>
          <block wx:else>
              <view class="publish">
              <image src="data:image/png;base64,"></image>
              </view>
          </block>
      </view>
    </view>
  <view class="bottom-picture-box {{showSelectImg?'':'hidden'}}">
    <view class="picture-box-item" bind:tap="takePicture" >从相册选择图片</view>
    <view class="picture-box-item" bindtap="takePhotoWithMessage">从聊天记录选择图片</view>
    <view class="picture-box-cancel" bindtap="cancelPictureSelect">取消</view>
  </view>  

<!-- canvas压缩图片 -->
<canvas id="mCanvas"  type="2d"
style="position: fixed; left: -9999px; top: -9999px; width:{{ccWidth}}px;height:{{ccHeight}}px;"></canvas>
  

<view class="ad_back" wx:if="{{notVip == 1}}">
  <custom-ad ad_type="{{3}}"></custom-ad>
          
</view>

         
<!-- 隐私组件 -->
<privacy></privacy>
<!-- 客服 -->
<customerService type="normal" customerWidth="120px"  direction="right" DistanceFromBottom="80%" />
