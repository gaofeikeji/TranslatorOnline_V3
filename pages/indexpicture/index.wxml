<!--pages/indexpicture/index.wxml--> 
<navigation-bar
canBack="{{true}}" 
currentLang="{{currentLang}}"
currentTargetLang="{{currentTargetLang}}" 
    color-animation-duration="2000"
    color-animation-timing-func="easeIn"
  />  

  <!-- 当前图片展示容器 -->    
  <scroll-view class="scrollarea" scroll-y type="list">                             
  <view class="container ">  
    <movable-area scale-area="{{true}}"  id="zoomArea" class="zoomArea"
    style=" width:{{selectPicturWidth*18}}px;height:{{selectPicturHeight*18}}px;background:pink">
      <movable-view direction="all"        
      scale-min="0.001" x="{{currentSelectX}}" y="{{currentSelectY}}"  
       scale-max="5"   damping="25" inertia="{{false}}"  
        style="width:{{selectPicturWidth}}px;height:{{selectPicturHeight}}px;background:blue"
      
       out-of-bounds="{{true}}"  inertia="{{true}}" scale="{{true}}" direction="all"    >
     <!-- bindscale="linstenerScale"  -->
      <view  class="media-info-box" 
      wx:for="{{ langList }}"  wx:for-item="items"   wx:key="selectPicturPath" 
      style="width:{{items.selectPicturWidth}}px;height:{{items.selectPicturHeight}}px;background:red"> 
          <!-- 显示结果 -->
            <!-- <block wx:if="{{ showResult ==   1 }}">  
            </block> -->
          <view    wx:for="{{ items.list }}"   wx:for-item="item"  wx:key="i" 
              class="media-text-item {{currentSelectItem==(item.top+':'+item.left)?'selected':''}}"
               data-rate="{{ item.single_rate }}" 
              style="left:{{item.single_pos.pos[0]['x']}}px;top:{{item.single_pos.pos[0]['y']}}px;height:{{item.bottom-item.top}}px;line-height:{{item.bottom-item.top}}px;"
              >
              <block wx:if="{{ showResult ==0 }}">
                <text  bindtap="toVerticleHorizonTextItem"  data-top="{{item.top}}" data-left="{{item.left}}" class="media-text" style="font-size:{{(item.right-item.left)/item.single_str_utf8.length}}px">{{item.single_str_utf8}}</text>  
              </block> 
              <block wx:else> 
                <text   bindtap="toVerticleHorizonTextItem"  data-top="{{item.top}}" data-left="{{item.left}}" class="media-text" style="font-size:{{(item.right-item.left)/item.single_str_utf8.length}}px">{{item.translate}}</text>
              </block>
          </view> 
      
            <block wx:if="{{ showResult ==   0 }}"> 
            </block>
            <image class="default-image" 
            style="width:{{items.selectPicturWidth}}px;height:{{items.selectPicturHeight}}px;" 
            src="{{items.selectPicturPath||''}}"></image> 
            <!-- bind:tap="viewImage" -->

      </view>
    </movable-view>
    </movable-area>
    
    
  </view>    
</scroll-view>
