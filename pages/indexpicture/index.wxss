/* pages/indexpicture/index.wxss */
.start-media{
  
  height: 900rpx;
  text-align: center;
}
/* 解析的图片内容 */
.media-info-box{ 
  position: absolute;
  z-index: 11;
  height: 100%;
  width: 100%;
  margin:0;
  background: rgba(255,118,108,0.2);
}


/* 操作容器 */
.action-container{
  background: #fff;
  background-color: rgba(255，255，255，1);
  border-top: 1px solid #ddd;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx; 
  position: fixed;
  bottom: 0;
  left: 0;              
  z-index: 8888;    
  padding-bottom: 80px;
  width: 100%;
}
.action-box{
  height: 40px;
  line-height: 40px;
  display: block;
  width: 100%;
  padding: 0 20px;
}
.action-box image{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  margin:0  20px;
}
.action-box image:last-child{
  float: right;
}
.action-box .text-btn{
  margin:0  10rpx;
  display: inline-block; 
  width: 20px;
  height: 46px;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.6);
}
.action-box .text-btn.close{
  float: right;
  margin-right:60rpx;
}

.scroll-translate{
  height: 300rpx;
  width: 100%;
}

.scroll-translate  text{ 
  display: inline-block; 
  font-size: 28rpx;
  color: #000;
}
.lang-item text.horizon-text{
  display: inline-block; 
  width: 44%;
  /* line-height: 60rpx; */
  border-top: 1px solid rgb(184, 184, 184);
  border-left: 1px solid rgb(184, 184, 184);
  vertical-align: top;
  padding: 6rpx 2%;
}

.lang-verticl-item{
  border-bottom: 1px solid rgb(184, 184, 184);
  padding: 0 16rpx;
}
.lang-verticl-item .title{
  width: 100rpx;
}
.lang-verticl-item .title.translate{
  color: rgba(31, 113, 255, 1);
}
.lang-verticl-item .right-text{
  min-width: 400rpx;
}

/* 通用view 模式btn */
.action-btn-box{
  padding: 20rpx;
}
.action-btn-box .closeBtn{
  margin-left: 80%;
}
.action-btn-box .action-btn{
  border-radius: 2px;
  color: #000;
background: rgba(255, 255, 255, 1); 
border: 1px solid rgba(0, 0, 0, 0.15);

box-shadow: 1px 1px 2px  rgba(0, 0, 0, 0.05);
  width: 80%;
  /* max-width: 460rpx; */
  height: 100rpx;
  line-height: 100rpx;
  margin: 30rpx;
  text-align: center;
}