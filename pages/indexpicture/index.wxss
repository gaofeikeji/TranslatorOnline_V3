/* pages/indexpicture/index.wxss */
page{
  height: 100%;
  width: 100%;
}
.container{ 
  width: 100%;
  background: rgba(0, 0, 0, 0.03);
} 
/* 解析的图片内容容器 */
.zoomArea{ 
  position: relative;
  margin:0;
  height: 100%;
  width: 100%; 
  text-align: center;
  display: flex;flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #eee;
}
.zoom-area{
  width: 80%;
  height: 80%;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  border: 2px solid rgb(37, 37, 37);
  color: #000;
}
/* 缩放图片容器 */ 
.media-info-box{ 
  position: relative;
  height: 100%;
  width: 100%; 
  border-radius: 6rpx;
  border: 4rpx solid transparent;
  margin: 40rpx 0;
  pointer-events: none;
} 
.media-info-box::after{
  content: "";
  display: table;
  clear: both;
}
.media-info-box:nth-child(odd){
  border: 4rpx solid #eee; 
}
.default-image{
  padding: 0;
  margin: 0;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  pointer-events: none;
  filter: blur(1.2px);
  opacity: 1;
  z-index: 22;
}


.media-text-item{ 
  position: absolute;
  z-index: 444;
  box-shadow: none;
  display: inline-block;
  pointer-events: none;
  /* background-color: rgba(245, 33, 33, 0.81); */
 background: rgba(255,255,255,0.4);
  color:rgba(0,0,0,0.5);
  pointer-events: none;
  text-align: justify;
} 
.media-text-item.selected{
  color: #fff ; 
  box-shadow: 0 0 1px rgba(31, 113, 255, 0.8);
  background: rgba(56, 148, 209, 0.781);
  /* background: var(--bg); color: rgb(from var(--bg) calc(1 - r) calc(1 - g) calc(1 - b)); */
  /* transform: scale(1.2); */
  pointer-events: none;
}
 
