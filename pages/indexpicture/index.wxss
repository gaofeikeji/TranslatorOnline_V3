/* pages/indexpicture/index.wxss */
page{
  height: 100%;
  width: 100%;
}
.container{ 
  width: 100%;
  background: rgba(0, 0, 0, 0.03);
} 
/* 解析的图片内容容器 */
.zoomArea{ 
  position: relative;
  margin:0;
  height: 100%;
  width: 100%; 
  text-align: center;
  display: flex;flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #eee;
}
.zoom-area{
  width: 80%;
  height: 80%;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  border: 2px solid rgb(37, 37, 37);
  color: #000;
}
/* 缩放图片容器 */ 
.media-info-box{ 
  position: relative;
  height: 100%;
  width: 100%; 
  background-color: rgba(255,255,255,1);
  border: 4px solid rgb(37, 37, 37);
  border-radius: 6rpx;
  pointer-events: none;
} 
.media-text-item{ 
  position: absolute;
  left: 0;
  box-shadow: 0 0 1px #000;
  pointer-events: none;
}
.media-text{
  font-size: 20rpx; 
  color: #000;
  pointer-events: none;
}

.media-text-item.selected .media-text{
  color: rgba(31, 113, 255, 0.8) ; 
  box-shadow: 0 0 1px rgba(31, 113, 255, 0.8);
  /* transform: scale(1.2); */
  pointer-events: none;
}
 
.action-scale{
  position: absolute;
  width: 80rpx;
  height: 150rpx;
  z-index:6666;
  right:0;
  top:35%;
}
.action-scale .scaleAction{
  display: block;
  width: 80rpx;
  height: 80rpx; 
  margin: 30rpx 20rpx;
 transform:  scale (1.4);
}


.icon-btns{ 
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  opacity: 1; 
  margin-top: 20rpx;
}
.icon-btns-close{ 
  display: inline-block;
  margin-top: 20rpx;
width: 38.5rpx;
height: 38.5rpx;
opacity: 1; 
float: right;
}