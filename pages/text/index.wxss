/* pages/text/index.wxss */
page{ 
  background: #CCCCCC;
  width: 100%;
  height: 100vh;
}   
.section-box{
  display: flex;
}

.text-container{
  height: 74%;
  width: 100%;
  background: #fff;
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-sizing: border-box;
  /* border-radius: 0rpx 0rpx, 20rpx, 20rpx; */
  padding: 30rpx 30rpx 0 30rpx;

}  
.textarea-container{  
  background: rgba(0, 0, 0, 0.03);
  min-height: 1000rpx;
  max-height: 100%;
  overflow-y: auto;
  width: 100%;
  opacity: 1;
  border-radius: 8rpx;
  padding: 28rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.bottom-text{
  color: #000;
  width: 99%;
  display: flex;
  /* height: 86rpx; */
  align-items: center;
  padding: 22rpx 0 28rpx 0;
  box-sizing: border-box;
  /* justify-content: space-between; */
}
.flex-cloum{
  display: flex;
  /* justify-content: space-between; */
}
.flex-cloum2{
  flex: 2;
  justify-content: space-between;
}
.flex-box{
  display: flex;
}
.img-text{ 
  display: flex;
  margin-right: 28rpx ;
  height: 36rpx;
  align-items: center;
  flex-wrap: nowrap; 
  box-sizing: border-box;
}
.img-text .flex-img-left,.vip_lock_img{
  display:inline-flex;
    height: 30rpx;
    width: 26rpx;
    vertical-align: bottom; 
    margin-right: 10rpx;
} 
.img-text .not-wrap{
  height: 36rpx;
  line-height:30rpx;
}
.vipinfo{
  display: flex;
} 
 
 