page{
  height: 100%;
  width: 100%;
  padding: 0;
} 
.scrollarea { 
  height: 100%;
  width: 100%;
  margin-top: 0rpx; 
}
.container{
  /* display: flex;
  flex-direction: row;   */
  align-items: center;
   background: #ccc;
   height: 100%;
   width: 100%;

}           
.text-container{
  height: 74%;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  /* border-radius: 0rpx 0rpx, 20rpx, 20rpx; */

}  
.textarea-container{  
  background: rgba(0, 0, 0, 0.03);
  padding: 20rpx;
  height: 74%;
  width: 86%;  
  opacity: 1;
  border-radius: 8rpx;
}
.bottom-text{
  color: #000;
  width: 95%;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.flex-box{
  display: flex;
}
.flex-cloum{
  flex: 1;
}
.img-text{ 
  flex-direction: column;
  margin-right: 40rpx;
  flex-wrap: nowrap;
  height:60rpx;
  line-height: 60rpx;
  flex: 1;
}
.img-text image{
  display:inline-flex;
    height: 26rpx;
    width: 26rpx;
}
.picture-action{
  transform: translateY(18px);
}

.vipinfo{
  display: flex;
}