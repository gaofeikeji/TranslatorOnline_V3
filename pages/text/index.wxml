<!--pages/text/index.wxml-->
<navigation-bar title="{{nbTitle}}" loading="{{nbLoading}}" front-color="{{nbFrontColor}}" background-color="{{nbBackgroundColor}}" color-animation-duration="2000" color-animation-timing-func="easeIn" />
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container" > 
    <textarea class="textarea-container" maxlength="{{isVip?-1:2000}}" placeholder="请输入需要翻译的文本" 
    focus="{{focus}}" value="{{fromText}}" bindinput="updateFormText" />
    <view class="bottom-text">
      <text class="text-btn" data-actype="1"  bindtap="textFun">粘贴</text>
      <text class="text-btn" data-actype="3"  bindtap="textFun">清空</text>
    </view>
  </view>
</scroll-view> 

<view class="tab-bar tabbar tab-bottom safe-area">                   
  <button class="circle-btn picture-action" data-actype="2"  bindtap="textFun">确定翻译</button>
</view>