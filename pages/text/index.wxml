<!--pages/text/index.wxml-->

<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">     
     <block wx:if="{{ !initTextBox }}">  
        <view>
          <textarea placeholder="请您输入要翻译的文本"
           focus="{{focus}}" />                    
          <button  class="circle-btn picture-action" bindtap="submitTranslate">确认翻译</button>
        </view>
          
        </block>   
        <block wx:else> 
        <view>
          <button  class="circle-btn picture-action" bindtap="submitTranslate">确认翻译</button>
        </view>
        </block>
  </view>
</scroll-view>