
.container {
  width: 100%;
  height: 100%;
}
.mask {
  position: fixed;
  inset: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.wrapper {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1001;
  width: 100vw;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
/* 2023-12-4 start */
.wrapper-top {
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.count-down {
  flex: 1;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.count-down image {
  width: 220rpx;
  height: 50rpx;
}
.count-down-text {
  border-radius: 6rpx;
  background: linear-gradient(0deg, rgba(196, 0, 0, 1) 0%, rgba(255, 120, 120, 1) 100%);
  box-shadow: 0px 0px 4rpx  rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  letter-spacing: -2rpx;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.count-down text:last-child {
  min-width: 60rpx;
}
.colon {
  font-size: 32rpx;
  font-weight: 400;
  letter-spacing: -2rpx;
  color: rgba(207, 0, 0, 1);
}
.wrapper-top .close {
  width: 50rpx;
  height: 50rpx;
}
/* 2023-12-4 end */

.wrapper .close {
  align-self: flex-end;
}
.wrapper .close image {
  width: 50rpx;
  height: 50rpx;
}
.wrapper .tips {
  display: flex;
  align-items: center;
  padding: 18rpx 20rpx;
  margin: 20rpx 0 20rpx 0;
  border-radius: 10rpx;
  background: rgba(255, 241, 211, 0.54);
}
.wrapper .tips image {
  width: 44rpx;
  height: 44rpx;
}
.wrapper .tips .tips-text {
  color: rgba(135, 90, 0, 1);
  font-size: 24rpx;
  margin: 0 0 0 10rpx;
}
.list-wrapper {
  width:100%;
  display: flex;
  display: -webkit-box;
  flex-direction: column;
  /* gap: 20rpx; */
  padding: 20rpx 0;
}
.list-item {
  box-sizing: border-box;
  width: 188rpx;
  height: 224rpx;
  border-radius: 5px;
  background: rgba(232, 184, 88, 0.05);
  box-shadow: 0 0 0 1rpx rgba(130, 87, 0, 0.6);
  position: relative;
  padding: 16rpx 20rpx;
  margin: 0 0 0 4rpx;

  margin-right: 20rpx;
}
.list-item .date {
  display: flex;
  align-items: baseline;
}
.list-item .date .date-days {
  color: rgba(0, 0, 0, 1);
  font-size: 36rpx;
  font-weight: bold;
  line-height: 52.12rpx;
}
.list-item .date .date-text {
  color: rgba(0, 0, 0, 1);
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40.54rpx;
  margin-left: 2rpx;
}
.list-item .price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-item .price text {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 46.34rpx;
  color: rgba(252, 81, 63, 1);
}
.list-item .price image {
  width: 32rpx;
  height: 32rpx;
}
.list-item .origin-price {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34.76rpx;
  text-decoration-line: line-through;
  color: rgba(0, 0, 0, 0.25);
  margin: 0 0 12rpx 0;
}
.list-item .unit {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(135, 90, 0, 0.76);
  border-radius: 0rpx 0rpx, 10rpx, 10rpx;
  background: rgba(232, 184, 88, 0.1);
}
.list-item .couponed {
  background: rgba(255, 87, 51, 0.1);
  color: rgba(255, 87, 51, 0.76);
}
.list-item .corner {
  position: absolute;
  top: -20rpx;
  right: -16rpx;
  z-index: 3;
  border-radius: 90px;
  background: rgba(255, 41, 41, 1);
  border: 2px solid rgba(0, 0, 0, 0.18);
  font-size: 20rpx;
  font-weight: bold;
  letter-spacing: 0rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(255, 255, 255, 1);
  padding: 0rpx 16rpx;
}
.privilege {
  margin: 20rpx 0 40rpx 0;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  justify-content: space-between;
  gap: 20rpx 40rpx;
}
.privilege-item {
  display: flex;
  align-items: center;
}
.privilege .privilege-item image {
  width: 32rpx;
  height: 32rpx;
} 
.privilege .privilege-item .privilege-text {
  font-size: 24rpx;
  line-height: 34.76rpx;
  color: rgba(191, 136, 25, 1);
  margin: 0 0 0 10rpx;
}
.open-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 1);
  background: rgba(217, 159, 43, 1);
  border-radius: 10rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0px 0px 4px  rgba(0, 0, 0, 0.2); 
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}
.open-btn:active {
  background: rgba(217, 159, 43, 0.8);
}
.selected {
  background: rgba(232, 184, 88, 0.25);
  box-shadow: 0 0 0 4rpx rgba(130, 87, 0, 0.6);
}
.coupon_border{
  box-shadow: 0 0 0 1rpx rgba(255, 87, 51, 0.6);
}
/* 折扣券选中 */
.coupon_selected {
  background: rgba(255, 87, 51, 0.15);
  /* 用box-shadow替代border解决元素跳动的问题 */
  /* box-shadow: 0 0 0 4rpx rgba(255, 87, 51, 0.6); */
  box-shadow: 0 0 0 4rpx rgba(255, 87, 51, 0.6);
}


/* 折扣券css */
.coupon-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 30%;
  z-index: 1002;
  margin: 0 auto;
  width: 80%;
  border-radius: 10rpx;
  padding: 30rpx;
}
.close-coupon {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  z-index: 1003;
}
.close-coupon image {
  width: 30rpx;
  height: 30rpx;
}
.coupon-wrapper__bg {
  position: absolute;
  inset: 0;
  z-index: -1;
}
.coupon-wrapper__bg image {
  width: 100%;
  height: 100%;
}
.coupon-wrapper__content {
  position: relative;
  z-index: 1004;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  top: 50rpx;
  text-align: center;
}
.coupon-wrapper__content__title {
  color: rgba(143, 98, 0, 1);
  font-size: 28rpx;
  line-height: 48rpx;
  padding-bottom: 20rpx;
}
.coupon-wrapper__content__sale {
  color: rgba(255, 87, 51, 1);
  font-size: 72rpx;
  line-height: 48rpx;
  font-weight: bolder;
}
.coupon-wrapper__btns {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transform: translateY(300rpx);
}
.coupon-wrapper__btns__btn {
  width: 400rpx;
  height: 90rpx;
  border-radius: 400rpx;
  background: rgba(255, 247, 171, 1);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0rpx 0rpx 80rpx  rgba(0, 0, 0, 0.6);
  color: rgba(255, 0, 0, 1);
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: bold;

  display: flex;
  align-items: center;
  justify-content: center;

  animation: scale 1s infinite;
}

/* 放大缩小动画 */
@keyframes scale {
  0% {
    transform: scale(0.9);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.9);
  }
}