/* components/gift_use/gift_use.wxss */
.dhm_blackback {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;

  background-color: rgba(0, 0, 0, 0.5);
}

.dhm_back {
  position: fixed;
  z-index: 1001;
  bottom: 0rpx;
  left: 0;

  width: 750rpx;
  opacity: 1;
  background: rgba(255, 255, 255, 0.9);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, 0.02);

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.dhm_tit {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 670rpx;

  font-size: 28rpx;
  font-weight: bold;
  line-height: 40.54rpx;
  color: rgba(0, 0, 0, 0.7);

  margin-top: 40rpx;
}

.dhm_img {
  width: 46rpx;
  height: 46rpx;
}

.dhm_input_back {
  margin: 50rpx 0;
}

.dhm_input {
  width: 670rpx;
  height: 90rpx;
  opacity: 1;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);

  padding: 0 30rpx;
  box-sizing: border-box;
}


.dhm_btn {
  width: 690rpx;
  height: 80rpx;
  opacity: 1;
  border-radius: 10rpx;
  background: rgba(215, 91, 91, 1);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0rpx 0rpx 8rpx rgba(0, 0, 0, 0.2);

  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 0rpx;
  line-height: 44rpx;
  color: rgba(255, 255, 255, 1);

  display: flex;
  align-items: center;
  justify-content: center;

  margin-bottom: 30rpx;
  margin-top: 20rpx;
}