.tr_container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;

  display: flex;
  justify-content: center;
  align-items: center;
}

.tr_mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 9999;
}

.tr_bk {
  width: 630rpx;
  /* height: 666rpx; */
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 1);
  z-index: 100;

  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 100rpx 0 80rpx 0;
}

.closeBtn_image {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 52rpx;
  height: 52rpx;
}

.tr_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image_bk2 {
  /* margin-top: 24rpx; */
}

.rt_image1 {
  width: 244rpx;
  height: 42rpx;
}

.rt_image2 {
  width: 372rpx;
  height: 126rpx;

  position: relative;
}

.text_wa_1_bk {
  position: absolute;
  top: 20rpx;

  width: 100%;
  /* height: 100%; */

  display: flex;
  align-items: center;
  justify-content: center;

}

.text_wa_1 {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 46rpx;
  color: rgba(255, 255, 255, 1);
}

.text_con_bk {
  width: 320rpx;
  margin-top: 30rpx;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 32rpx;
  line-height: 46rpx;
  color: rgba(0, 0, 0, 1);
  text-align: center;
  vertical-align: top;
}

.text_wa_3_bk {
  margin-top: 100rpx;
  width: 400rpx;
  height: 90rpx;
  border-radius: 400rpx;
  background: rgba(7, 193, 96, 1);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0rpx 0rpx 80rpx rgba(0, 0, 0, 0.1);

  display: flex;
  align-items: center;
  justify-content: center;

