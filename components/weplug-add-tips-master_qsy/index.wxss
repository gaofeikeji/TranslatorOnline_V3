.box {
  position: fixed;
  top: 0;
  /* left: 0; */
  right: 30rpx;
  z-index: 999;
  display: flex;

  justify-content: flex-end;
  align-items: flex-end;
  flex-direction: column;
}

.black_back {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.arrow {
  width: 0;
  height: 0;
  margin-right: 100rpx;
  border-width: 20rpx;
  border-style: solid;
  /* border-color:  transparent transparent #34b5e2 transparent; */
  border-color: transparent transparent rgb(255, 255, 255) transparent;
}

.body {
  display: flex;
  align-items: center;

  padding: 0 30rpx;

  width: 528rpx;
  height: 418rpx;

  border-radius: 10rpx;
  background: rgba(255, 255, 255, 1);

  flex-direction: column;

}

.body .text {

  padding: 30rpx 0;
  /* width: 100%; */
  font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 0rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 1);
  text-align: left;
  vertical-align: top;
}

.down_cont {
  width: 100%;
  height: 100%;

  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  /* justify-content: center; */

  /* background-color: aqua; */
  border-top: 1px solid #eee;

}

.down_text_bk {
  width: 100%;
  display: flex;
  flex-direction: row;
  gap: 0 30rpx;
}

.down_text_bk .img1 {
  width: 40rpx;
  margin-top: 0;
  display: flex;
}

.down_text_bk_2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 0 15rpx;
}

.shezhi {
  width: 70rpx;
  height: 40rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0 4rpx;

  border-radius: 180rpx;
  background: rgba(255, 255, 255, 0);
  border: 2rpx solid rgba(0, 0, 0, 0.29);
}

.shezhi .q1,
.shezhi .q2 {
  width: 8rpx;
  height: 8rpx;
  opacity: 1;
  background: rgba(0, 0, 0, 1);
  border-radius: 50%;
}

.shezhi .q1 {}

.shezhi .q2 {
  width: 13rpx;
  height: 13rpx;
}

.text2 {
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 40.54rpx;
  color: rgba(0, 0, 0, 1);
}

.down_text_bk .img2 {
  width: 380rpx;
}

.down_img_bk {
  /* 子元素靠右 */
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;

  margin-top: 20rpx;
}

.down_img_bk .img3 {
  width: 424rpx;
  margin-left: auto;
  margin-right: 30rpx;
}


.box2_back {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;

}

.box2 {
  width: 560rpx;
  height: 768rpx;

  border-radius: 10rpx;
  background: rgba(255, 255, 255, 1);

  display: flex;
  flex-direction: column;
}

.box2 .add_title {
  height: 120rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

  gap: 0 20rpx;
}

.box2 .add_img_bk {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.add_title image {
  width: 40rpx;
  height: 40rpx;
}

.box2 .add_img_bk {}

.box2 .add_img_bk image {
  width: 560rpx;
  height: 536rpx;
}

.add_iknow {
  height: 120rpx;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 24rpx;
  color: rgba(0, 0, 0, 1);

  display: flex;
  align-items: center;
  justify-content: center;
}