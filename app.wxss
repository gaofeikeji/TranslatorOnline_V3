/**app.wxss全局page和text内容字体大小*/
page,text{  font-size: 30rpx;}
page,text,view,navigator,swiper,swiper-item,image{ 
  margin: 0px;  padding: 0px;  
  box-sizing: border-box;
} 
page,text{  font-size: 30rpx;}

page,text,view,navigator,swiper,swiper-item,image{  
  /*设置组件全局边距*/  
  margin: 0px;  padding: 0px;  /*  * 指定元素的宽或高包含padding和border，不包含mmargin。  * 如果不设置默认为content-box，元素的宽或高不包含padding和border  */ 
   box-sizing: border-box;
  }
page {
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.safe-area{
    height: 85px;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);

}
.scrollarea {
  display: block;
  height: 100%;
  width: 100%; 
  /* padding-bottom: 85px; */
background: rgba(204, 204, 204, 1);
}
.container{
  position: relative;
  height:100%;
  width: 100%;
  background: rgba(51, 51, 51, 1);
  
} 
.start-media{
  position: absolute;
  z-index: 9;
  height: 100%;
  width: 100%;
  margin:0;
}
.start-media image{
  height: 88%;
  width: 88%;
  margin: 0 auto; 
}
.start-media image.scale{
  height:60%;
  width: 60%; 
}

.container {
  height: 100%; 
  align-items: center;
  justify-content: space-between;
  /* padding: 180rpx 0; */
  /* padding: 50rpx 0 0 0; */
  position: relative;
} 
.text-box-notice{
  color: #fff;
}
 .circle-btn.picture-action{
  display: inline-block;
  width: 260rpx !important;
  border-radius: 180rpx;
  height:90rpx !important;
  line-height: 90rpx !important;
  text-align: center;
  padding:0 !important;   
  margin: 0 auto;
  box-shadow: 0 0 0 5rpx rgba(31, 113, 255, 1) !important;
  opacity: 1;
  background: linear-gradient(135deg, rgba(31, 113, 255, 0.8) 0%, rgba(31, 113, 255, 1) 100%) !important; 
  border: 4rpx solid rgba(255, 255, 255, 1) !important;
    
  font-size: 36rpx !important;
  font-weight: bold !important;
  letter-spacing: 0rpx !important;
  color: rgba(255, 255, 255, 1) !important;
}
  


/*上传图片中 图片选择 */
.bottom-picture-box{
    width: 100%;
    position: absolute;
    z-index: 6666;
    bottom: 0;
    left: 0;
    background-color: #fff;
    color: #000;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}
.picture-box-item{
    height: 112rpx;
    line-height: 112rpx;
    text-align: center; 
    border-bottom:1px solid rgba(242, 242, 242, 1);
}
.picture-box-cancel{ 
    min-height: 180rpx;
    line-height: 180rpx;
    text-align: center; 
    border-top: 16rpx solid rgba(242, 242, 242, 1);
}




/* 底部选项卡 */
.tab-bottom {
  width: 100%;
  height: 85px;
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 999; 
  background: #fff;
  border-top: 1px solid #ddd;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.tab-bottom.transparent{
  background-color: transparent;
  border-top-color: transparent; 
  display: block;
  text-align: center;
} 
.tabbar-item {
    display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 85px;
}

.tabbar-item image {
  width: 42.09rpx;
  height: 42rpx;
  opacity: 1;
  background-color: linear-gradient(135deg, rgba(31, 113, 255, 0.8) 0%, rgba(31, 113, 255, 1) 100%);
}

.tabbar-item text { 
  margin-top: 16rpx;
  
  font-size: 28rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  line-height: 44rpx;
  color: rgba(0, 0, 0, 0.45);
}

.tabbar-item .publish {
  width: 65rpx;
  height: 65rpx;
  background-color: #ff90ba;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: auto; 
}

.tabbar-select {
  color: #303030;
}
.hidden{
  display: none!important;
}
.closeBtn{
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  text-align: center;
  line-height: 20px;
  margin: 8px 0;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
}


.flex-center{
  width: 100%;
  display: flex;
  flex-direction: column; 
}


/* 操作容器 */
.action-container{
  background: #fff;
  background-color: rgba(255，255，255，1);
  border-top: 1px solid #ddd;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx; 
  position: absolute;
  bottom: 85px;
  left: 0;              
  z-index: 3330;     
  width: 100%;
}
.action-box{
  height: 40px;
  line-height: 40px;
  display: block;
  width: 100%;
  padding: 0 5px; 
}
.action-box image{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  margin:0  10px;
} 
.action-box image:last-child{
  float: right;
}
.action-box .text-btn{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  opacity: 1; 
  margin-top: 20rpx;
   
}
.action-box .text-btn.close{
  margin-right:20rpx;
  width: 38.5rpx;
  height: 38.5rpx;
  opacity: 1;
  float: right;
}
.action-box .text-btn.selected{
  color: rgba(31, 113, 255, 1) ;
}
.scroll-translate{
  height: 300rpx;
  width: 100%;
}

.scroll-translate  text{ 
  display: inline-block; 
  font-size: 28rpx;
  color: #000;
}
.lang-item .horizon-text{
  display: inline-block; 
  width: 50%;
  /* line-height: 60rpx; */
  border-top: 2rpx solid rgba(0, 0, 0, 0.05);
  border-left: 2rpx solid rgba(0, 0, 0, 0.05);
  vertical-align: top;
  padding: 8rpx 2%; 
  font-weight: normal; 
  
font-size: 28rpx;
font-weight: 400;
letter-spacing: 0rpx;
line-height: 36rpx;
color: rgba(0, 0, 0, 1);
}
.lang-item .horizon-text{

  font-size: 14px;
  font-weight: normal;
  letter-spacing: 0px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.7);
}
.lang-item:not(.selected )  .horizon-text.translate{

  color: rgba(0, 0, 0,1);
}
.lang-item.selected  .horizon-text,.lang-verticl-item.selected .title,lang-verticl-item.selected .right-text{
  color: rgba(31, 113, 255, 0.8) ;
}

.lang-item  .translate-text{
  font-weight: normal;
  color: #000;
}
.lang-item  .translate-margin{
  margin: 20rpx 0 0 0;

}
.lang-verticl-item{
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  padding: 8rpx 16rpx;
}
.verticle-text{
  display: flex;
  /* flex-direction: column; */
}
.lang-verticl-item{
  padding: 10rpx 15rpx;
}
.lang-verticl-item .title{ 
  color: rgba(0, 0, 0, 0.7);
  width: 56rpx;
  height: 402rpx;
  line-height: 40rpx;
  opacity: 1;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 10rpx 12rpx 0 0;
}
.lang-verticl-item .title.translate{
  color: rgba(31, 113, 255, 1);
  background: rgba(31, 113, 255, 0.1);
}
.lang-verticl-item .right-text{ 
  flex: 1;
}
.verticle-text .title.text-light{
  color: rgba(0, 0, 0, 0.7);
  background: rgba(0, 0, 0, 0.1);
}

