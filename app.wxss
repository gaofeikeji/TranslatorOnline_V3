@import './components.wxss'; */
page{ 
  overflow: hidden;
}
.page-container{
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background:#fff;
}

.page-container view,.header view{
  box-sizing: border-box;
}
.header{  
  background:#fff;
  padding: 0 0 10rpx 0;
} 
.section{
  /* background-color: red; */
  width: 100%; 
  flex: 1;
  position: relative;
  /* background: rgba(204, 204, 204, 1); */
  /* background-color: blue; */
} 
.footer:not(.footer-btn-box){
  background: #fff;
  height: 170rpx;
  width: 100%;
}
.footer-btn-box{
  width: 100%;
  align-items: center;
  justify-content: center;
}
.footer-content{
  display: flex;
  padding:60rpx;
}

.safe-area{
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);

}
.scrollarea {
  display: block;
  height: 100%;
  width: 100%; 
  /* padding-bottom: 85px; */
  overflow-y: auto;
}
.container{
  position: relative;
  height:100%;
  width: 100%;
  margin: 0;
  pad: 0;
  z-index: 111;
} 
.start-media{
  position: absolute;
  z-index: 9;
  height: 100%;
  width: 100%;
  margin:0;
}
.start-media image{
  height: 88%;
  width: 88%;
  margin: 0 auto; 
}
.start-media image.scale{
  height:60%;
  width: 60%; 
}
 
 .circle-btn.picture-action{
  display: inline-block;
  width: 260rpx;
  border-radius: 180rpx;
  height:90rpx;
  line-height: 90rpx ;
  text-align: center;
  padding:0;   
  margin: 0 auto;
  box-shadow: 0 0 0 5rpx rgba(31, 113, 255, 1) !important;
  opacity: 1;
  background: linear-gradient(135deg, rgba(31, 113, 255, 0.8) 0%, rgba(31, 113, 255, 1) 100%) !important; 
  border: 4rpx solid #fff !important;
    
  font-size: 36rpx !important;
  font-weight: bold !important;
  letter-spacing: 0rpx !important;
  color: rgba(255, 255, 255, 1) ;
}
  


/*上传图片中 图片选择 */
.bottom-picture-box{
    width: 100%;
    position: absolute;
    z-index: 6666;
    bottom: 0;
    left: 0;
    background-color: #fff;
    color: #000;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}
.picture-box-item{
    height: 112rpx;
    line-height: 112rpx;
    text-align: center; 
    border-bottom:2rpx solid rgba(242, 242, 242, 1);
}
.picture-box-cancel{ 
    min-height: 180rpx;
    line-height: 180rpx;
    text-align: center; 
    border-top: 16rpx solid rgba(242, 242, 242, 1);
}




.hidden{
  display: none!important;
}
.closeBtn{
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  text-align: center;
  line-height: 20px;
  margin: 8px 0;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
}


.flex-center{
  width: 100%;
  display: flex;
  flex-direction: column; 
}








.scroll-translate{
  height: 300rpx;
  width: 100%;
  padding: 0 8rpx;
}

.scroll-translate  text{ 
  display: inline-block; 
  font-size: 28rpx;
  color: #000;
}
.lang-item .horizon-text{
  display: inline-block; 
  width: 50%;
  /* line-height: 60rpx; */
  border-top: 2rpx solid rgba(0, 0, 0, 0.05);
  border-left: 2rpx solid rgba(0, 0, 0, 0.05);
  vertical-align: top;
  padding: 8rpx 2%; 
  font-weight: normal; 
  
font-size: 28rpx;
font-weight: normal;
letter-spacing: 0rpx;
line-height: 36rpx;
color: rgba(0, 0, 0, 1);
}
.lang-item .horizon-text{

  font-size: 14px;
  font-weight: normal;
  letter-spacing: 0px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.7);
}
.lang-item:not(.selected )  .horizon-text.translate{

  color: rgba(0, 0, 0,1);
}
.lang-item.selected  .horizon-text,.lang-verticl-item.selected .title,.lang-verticl-item.selected .right-text{
  color: rgba(31, 113, 255, 0.8) ;
}

.lang-item  .translate-text{
  font-weight: normal;
  color: #000;
}
.lang-item  .translate-margin{
  margin: 20rpx 0 0 0;

}

.action-container .lang-verticl-item{
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  padding: 8rpx 16rpx;
}
.verticle-text{
  display: flex;
  margin-bottom: 10rpx;
  /* flex-direction: column; */
}
.action-container .lang-verticl-item{
  padding: 15rpx 30rpx;
}
.action-container .lang-verticl-item .title{ 
  color: rgba(0, 0, 0, 0.7);
font-size: 20rpx;
font-weight: normal;
letter-spacing: 0rpx; 
  width: 56rpx;
  height: 40rpx;
  line-height: 40rpx;
  opacity: 1;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.1);
  text-align: center;
}
.action-container .lang-verticl-item .title.translate{
  color: rgba(31, 113, 255, 1);
  background: rgba(31, 113, 255, 0.1);
}
.action-container .lang-verticl-item .right-text{ 
  flex: 1;
  margin-left: 16rpx;
  letter-spacing: 0rpx;
  line-height: 36rpx;
}
.right-text.text-light{
  font-size: 28rpx;
font-weight: 400;
letter-spacing: 0rpx;
line-height: 36rpx;
color: rgba(0, 0, 0, 0.7);
}
.lang-verticl-item .verticle-text{
  margin-right: 12rpx;
}
.verticle-text .title.text-light{
  color: rgba(0, 0, 0, 0.7);
  background: rgba(0, 0, 0, 0.1);
}
.verticle-text .text-dark{
  color: #000;
}

/* 通用view 模式btn */
.action-btn-box{
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
}
.action-btn-box .closeBtn{
  margin-left: 92%;
}

.selected-image{
  width: 90%;
  pointer-events: none;
  margin: 0 auto;
  pointer-events: none;
}


.action-btn-box .action-btn{
  border-radius: 2px;
  color: #000;
background: rgba(255, 255, 255, 1); 
border: 2rpx solid rgba(0, 0, 0, 0.15);
box-shadow: 2rpx 2rpx 4rpx  rgba(0, 0, 0, 0.05);
  width: 92%;
  height: 90rpx;
  line-height: 90rpx;
  opacity: 1;
  border-radius: 4rpx;
  /* margin: 15rpx; */
  text-align: center;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.action-btn-box .action-btn.selected{
  border: 1px solid rgba(31, 113, 255, 0.8);
  box-shadow: 0  0  2px  rgba(31, 113, 255, 0.8);
}


.float-right{
  float: right;
}



::-webkit-scrollbar {
  width: 0px; 
  height: 0px; 
  color:#fff;

}
::-webkit-scrollbar-track {

  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);

  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);

  border-radius: 1px;

  background-color:#e5e5e5;

}
::-webkit-scrollbar-thumb {

  border-radius: 10px;

  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);

  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);

  background-color:#e5e5e5;

}