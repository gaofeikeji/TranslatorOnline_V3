<!-- 语言切换容器 -->
<view class="tab-bar tabbar tab-top" style="padding-top: {{statusBarHeight}}px;background:#fff;">
  <view class="current-language-box " 
  style="height:{{(navBarHeight)}}px;display: flex;width:{{menuLeftwidth-50}}px;line-height:{{(navBarHeight)-20}}px;align-items:center;">  
     <block wx:if="{{canBack}}">  
      <image class=""  class="btn-back" bindtap="back" 
        src="data:image/png;base64," mode="aspectFit" lazy-load="false">
        
      </image>
              
      </block>   
      <!-- 只显示标题的特殊处理，其他的全部显示 -->
      <block wx:if="{{onytitle}}">   
        <view class="nav-page-title" style="display: flex;width:{{menuLeftwidth-50}}px;" ><text  class="page-title" > {{title}}</text></view>
      </block>    
      <block wx:else>  
        <!-- display: flex;width:{{menuLeftwidth-50}}px;height:{{navBarHeight}}px;line-height: 48px; -->
        <view   style="height:{{(navBarHeight-20)}}px;width:{{menuLeftwidth-50}}px;line-height:{{(navBarHeight)-20}}px;align-items:center;"
         class="tab-lang-switch"    bindtap="selectLang">
          <text style="" class="lang text-active">{{langData[currentLang]}}</text>
          <image class="lang_switch" mode="aspectFit" src="data:image/png;base64,"></image> 
          <text style="" class="lang text-active">{{langData[currentTargetLang]}}</text>
          <image class="lang_switch" style=""  mode="aspectFit" src="{{editLang?'data:image/png;base64,':'data:image/png;base64,'}}"></image> 
        </view>
      </block>   
    
  </view>
</view>
 
  <!-- 语言容器 -->
<view class="section-box-lang {{editLang?'edit-lang':''}}"
 style="height: {{screenHeight-navBarHeight-89}}px;top:{{navBarHeight+statusBarHeight}}px;left:0;z-index: 11111;">     
  <!-- 源语言 -->
   <view  class="flex-item current-language-list" >
      <scroll-view class="scroll-box" type="list"	scroll-y="true" >
          <view class="lang-item {{updateLang==idx?'selected':''}}" bind:tap="fromIdxChange"  wx:for-index="idx" 
          wx:for="{{langData}}" wx:key="*this"  data-lang-type="fromIdx"  
          data-index="{{idx}}">{{item}}</view>
      </scroll-view>
      <view class="bootom-action"  bind:tap="oldTranslateLang">
        <text class="lang-action-btn">取消选择</text>
      </view>
    </view>   
    <!-- 目标语言 -->
  <view class="flex-item  target-language-list" >
    <scroll-view class="scroll-box"  type="list" scroll-y="true" > 
        <view bind:tap="fromIdxChange" class="lang-item {{updateTargetLang==idx?'selected':''}}"  wx:for-index="idx" 
        wx:for="{{langData}}"  wx:key="*this" data-lang-type="toIdx"  data-index="{{idx}}" > 
        {{item}}</view>
    </scroll-view>
      <view class="bootom-action selected"  bind:tap="updateTranslateLang">
        <text class="lang-action-btn">确认语言</text>
      </view>
  </view>
</view>

