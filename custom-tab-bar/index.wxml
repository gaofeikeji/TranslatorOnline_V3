<view class="tab-bar tabbar tab-top" style="padding-top: {{statusBarHeight}}px;">
  <view class="current-language-box " 
  style="height:{{navBarHeight}}px;padding:0 {{menuRight}}px;">  
     <block wx:if="{{!requireBack}}"> 
        <text
              bindtap="back"  
              class="btn-back"
              hover-stay-time="100"
              aria-role="button"
              aria-label="返回" ></text>
             
      </block>  
      
      <view class="" style="display: flex;" bindtap="selectLang">
        <text class="lang text-active">{{currentLang}}</text>
        <image class="lang_switch" mode="aspectFit" src="/images/switch_gray.png"></image> 
        <text class="lang text-active">{{currentTargetLang}}</text>
        <image class="lang_switch" mode="aspectFit" src="/images/{{editLang?'up_arrow.png':'down_arrow.png'}}"></image> 
      </view>
    
  </view>
</view>
 
  <!-- 语言容器 -->
<view class="section-box-lang {{editLang?'edit-lang':''}}"
 style="height: {{screenHeight-145}}px;top:{{navBarHeight+statusBarHeight}}px;left:0;">     
  <!-- 源语言 -->
   <view  class="flex-item current-language-list" >
      <scroll-view class="scroll-box" type="list"	scroll-y="true" bind:tap="fromIdxChange">
          <view class="lang-item {{fromIdx==index?'selected':''}}"  
          wx:for="{{lang}}" wx:key="*this"  data-lang-type="fromIdx"  data-index="{{langCode[index]}}">{{item}}</view>
      </scroll-view>
      <view class="bootom-action"  bind:tap="oldTranslateLang">
        <text>取消选择</text>
      </view>
    </view>   
    <!-- 目标语言 -->
  <view class="flex-item  target-language-list" >
    <scroll-view class="scroll-box"  type="list" scroll-y="true" bind:tap="fromIdxChange"> 
        <view class="lang-item {{toIdx==index?'selected':''}}" 
        wx:for="{{lang}}"  wx:key="*this" data-lang-type="toIdx"  data-index="{{langCode[index]}}" > 
        {{item}}</view>
    </scroll-view>
      <view class="bootom-action selected"  bind:tap="updateTranslateLang">
        <text>确认语言</text>
      </view>
  </view>
</view>

