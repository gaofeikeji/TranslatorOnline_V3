<!-- 语言切换容器 -->
<view class="tab-bar tabbar tab-top" style="padding-top: {{statusBarHeight}}px;">
  <view class="current-language-box " 
  style="height:{{navBarHeight}}px;padding:0 {{menuRight}}px;">  
     <block wx:if="{{canBack}}"> 
         
              <image class=""  class="btn-back" bindtap="back"   src="data:image/png;base64," mode="aspectFit" lazy-load="false">
                
              </image>
              
      </block>   
      <!-- 只显示标题的特殊处理，其他的全部显示 -->
      <block wx:if="{{onytitle}}">   
        <view style="display: flex;width:230px;" ><text  class="page-title" > {{title}}</text></view>
      </block>    
      <block wx:else>  
        <view class="" style="display: flex;" bindtap="selectLang">
          <text class="lang text-active">{{langData[currentLang]}}</text>
          <image class="lang_switch" mode="aspectFit" src="data:image/png;base64,"></image> 
          <text class="lang text-active">{{langData[currentTargetLang]}}</text>
          <image class="lang_switch" mode="aspectFit" src="{{editLang?'data:image/png;base64,':'data:image/png;base64,'}}"></image> 
        </view>
      </block>   
    
  </view>
</view>
 
  <!-- 语言容器 -->
<view class="section-box-lang {{editLang?'edit-lang':''}}"
 style="height: {{screenHeight-navBarHeight-86}}px;top:{{navBarHeight+statusBarHeight}}px;left:0;z-index: 11111;">     
  <!-- 源语言 -->
   <view  class="flex-item current-language-list" >
      <scroll-view class="scroll-box" type="list"	scroll-y="true" bind:tap="fromIdxChange">
          <view class="lang-item {{updateLang==idx?'selected':''}}"  wx:for-index="idx" 
          wx:for="{{langData}}" wx:key="*this"  data-lang-type="fromIdx"  
          data-index="{{idx}}">{{item}}</view>
      </scroll-view>
      <view class="bootom-action"  bind:tap="oldTranslateLang">
        <text>取消选择</text>
      </view>
    </view>   
    <!-- 目标语言 -->
  <view class="flex-item  target-language-list" >
    <scroll-view class="scroll-box"  type="list" scroll-y="true" bind:tap="fromIdxChange"> 
        <view class="lang-item {{updateTargetLang==idx?'selected':''}}"  wx:for-index="idx" 
        wx:for="{{langData}}"  wx:key="*this" data-lang-type="toIdx"  data-index="{{idx}}" > 
        {{item}}</view>
    </scroll-view>
      <view class="bootom-action selected"  bind:tap="updateTranslateLang">
        <text>确认语言</text>
      </view>
  </view>
</view>

