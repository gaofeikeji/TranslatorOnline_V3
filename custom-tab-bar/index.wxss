.page{
  position: relative;
  width: 100%;
  height: 100%;
}
.text{
  color: rgba(255,255,255);
}
.text-active{
  color: rgba(41,119,255) ;
}
/* 顶部导航栏(  全局语言切换) */
.tab-top{ 
  width: 100%;
  min-height: 120rpx;
  height:11%;
  display: flex; 
  background-color: #fff;
  /* 刘海屏 */
  padding-top:48rpx; 
  /* padding-top: env(safe-area-inset-top);  */
  position: fixed;
  top: 0;
  z-index: 9999; 
  background-color: rgba(255，255，255，1);
  border-bottom: 1px solid #ddd;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
} 
.current-language-box{ 
  display: flex;
  align-items: center;
  font-size: 24rpx;
  flex-wrap: nowrap;
  margin-left: 50rpx;
}
.lang{
  display: inline-block;
  font-size: 34rpx;
  font-weight: 600;
}
.lang_switch{ 
  display: inline-flex;
  font-size: 24rpx;  
  width: 40rpx; 
  height: 30rpx;
  margin:  0 40rpx;
}

/* 全局语言切换容器 */
.section-box-lang{ 
  width: 100%;
  height: 72%;
  display: none;
  background-color: #fff;
  padding: 70rpx 0;
  position: fixed;
  /* top: 180rpx; */
  top: 11%;
  left: 0;
  z-index: 222;
  
}   
.edit-lang{
  display: flex; 
}
.flex-item{
  flex: 1;
  height: 100%;
  padding: 0 30rpx;
  text-align: center;
  color: #000;
}
.current-language-list{
  border-right: 1px solid #ddd;
}
.lang-item{
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}
.lang-item.selected{
  background:rgba(31, 113, 255, 1);
  color: #fff;
}












/* 底部选项卡 */
.tab-bottom {
  width: 100%;
  display: flex;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-bottom: env(safe-area-inset-bottom);
  padding: 40rpx 0 20rpx 0;
  z-index: 9999;
  background-color: rgba(255，255，255，1);
  border-top: 1px solid #ddd;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tabbar-item image {
  width: 45rpx;
  height: 45rpx;
  background-color: linear-gradient(135deg, rgba(31, 113, 255, 0.8) 0%, rgba(31, 113, 255, 1) 100%);
}

.tabbar-item text {
  font-size: 26rpx;
  margin-top: 16rpx;
  font-size:  28rpx;
}

.tabbar-item .publish {
  width: 65rpx;
  height: 65rpx;
  background-color: #ff90ba;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: auto; 
}

.tabbar-select {
  color: #303030;
}
