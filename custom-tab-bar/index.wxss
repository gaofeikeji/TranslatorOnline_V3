page{
    position: relative;
    width: 100%;
    height: 100%;
    /* padding-top: env(safe-area-inset-top);  */
  }
  .text{
    color: rgba(255,255,255);
  }
  
  /* 顶部导航栏(  全局语言切换) */
  .tab-top{ 
    width: 100%;
    /* min-height: 110rpx;
    height:8%; */
    display: flex; 
    background-color: #fff;
    /* 刘海屏 */
    /* padding-top:48rpx;  */
    position: fixed;
    top: 0;
    z-index: 6666; 
    background-color: rgba(255，255，255，1);
    border-bottom: 1px solid #ddd;
    border-bottom-left-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
  } 
  .current-language-box{ 
    display: flex;
    align-items: center;
    font-size: 24rpx;
    flex-wrap: nowrap;
    margin-left: 50rpx;
  }
  .lang{
    display: inline-block;
    font-size: 30rpx;
    font-weight: 600;
  }
  .lang_switch{ 
    display: inline-flex;
    font-size: 24rpx;  
    width: 30rpx; 
    height: 30rpx;
    margin:  0 30rpx;
    transform: translateY(6rpx);
  }
  
.btn-back{
  transform:scale(1.2) translateY(-5rpx);
  cursor: pointer;
  padding: 0 10rpx; 
}
.btn-back::after{
  content: "<";
  display: inline-block;
  color: rgba(0, 0, 0, 0.6); 
  font-size: 50rpx;
  font-weight: 800;
  padding: 0 30rpx 0 0;
}
  .text-active{
    color: rgba(41,119,255) ;
  }
  /* 全局语言切换容器 */
  .section-box-lang{ 
    width: 100%;
    background-color: #fff;
    padding: 20rpx 2px;
    margin-top: -20rpx;
    position: fixed;
    display: none;
  }   
  .edit-lang{
    display: flex; 
    position: fixed;
    z-index: 99999 ;
  }
  .flex-item{
    flex: 1;
    height: 100%;
    padding:25rpx  35rpx;
    text-align: center;
    color: #000;
    position: relative; 
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-bottom: none;
    box-sizing: content-box;
  }
  .scroll-box{ 
    height: 91%; 
  }
  .lang-item{
    height: 66rpx;
    line-height: 66rpx;
    border-radius: 10rpx;
  }
  .lang-item.selected{
    background:#1F71FF;
    color: #fff;
  }
  /* 语言切换的操作按钮 */
  .bootom-action{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    position: absolute;
    left: 0;
    bottom: 0px;
    z-index: 8888;
    font-weight: 600;
    color: #fff;
    background: #838383;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
  }
  .bootom-action.selected{
    background:#1F71FF;
  }